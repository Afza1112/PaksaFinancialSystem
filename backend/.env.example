# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/paksa_financial
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security Configuration
SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-base64-encoded-encryption-key

# Environment
ENVIRONMENT=development
DEBUG=true

# Feature Flags
FEATURE_ENABLE_AI_FEATURES=true
FEATURE_ENABLE_MULTI_TENANT=true
FEATURE_ENABLE_AUDIT_LOGGING=true
FEATURE_ENABLE_RATE_LIMITING=true
FEATURE_ENABLE_CACHING=true

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.xlsx,.csv,.jpg,.png

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password